{
  "compilerOptions": {
    "target": "es6",
    "lib": ["DOM", "es6", "ESNext.AsyncIterable"],
    "sourceMap": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "src/database/config.js"],
  "exclude": ["node_modules", "dist"]
}
